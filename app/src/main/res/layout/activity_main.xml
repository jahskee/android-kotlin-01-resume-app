<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">

    <TextView
            android:text="Jaizon Lubaton"
            android:layout_width="match_parent"
            android:layout_height="70dp" android:id="@+id/textView" android:textAlignment="center"
            android:textStyle="bold" android:textSize="30sp" android:textColor="@android:color/holo_blue_dark"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="236dp" app:srcCompat="@android:color/holo_green_dark"
            android:id="@+id/imageView"/>

</LinearLayout>